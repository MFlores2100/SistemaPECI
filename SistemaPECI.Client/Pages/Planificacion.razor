@page "/planificacion"

@inject NavigationManager NavigationManager
@inject IJSRuntime JS


<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<div class="container mt-5">
    <h3 class="page-title">Planificación</h3>

    <div class="row justify-content-center g-4">

        <!-- Gestión de Programas -->
        
        <div class="col-12 col-md-3">
            <a href="/gestionprogramas"
               class="btn-menu-square"
               style="text-decoration: none;"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom">
                <i class="bi bi-bar-chart icon-btn"></i><br />
                Gestión de Programas
            </a>
        </div>


        <!-- Financiamiento -->
        <div class="col-12 col-md-3">
            <a href="/financiamiento"
               class="btn-menu-square"
               style="text-decoration: none;"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom"
               title="Facilita la administración y asignación de recursos financieros para los programas planificados.">
                <i class="bi bi-wallet2 icon-btn"></i><br />
                Financiamiento
            </a>
        </div>

        <!-- Nuevo Programa -->
        <div class="col-12 col-md-3">
            <a href="/nuevoprograma"
               class="btn-menu-square"
               style="text-decoration: none;"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom"
               title="Permite registrar un nuevo programa en el sistema, ingresando toda la información necesaria para su creación.">
                <i class="bi bi-plus-square icon-btn"></i><br />
                Nuevo Programa
            </a>
        </div>

        <!-- Catálogo de Materiales -->
        <div class="col-12 col-md-3">
            <a href="/CatalogoMateriales"
               class="btn-menu-square"
               style="text-decoration: none;"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom"
               title="Accede al catálogo de materiales necesarios para la planificación y ejecución de programas.">
                <i class="bi bi-book icon-btn"></i><br />
                Catálogo de Materiales
            </a>
        </div>


    </div>
</div>

<style>
    .page-title {
        background-color: #005595;
        color: #ffffff;
        padding: 15px 0;
        border-radius: 8px;
        margin-bottom: 30px;
        font-weight: bold;
        font-size: 28px;
        text-align: center;
    }

    .btn-menu-square {
        background-color: #005595 !important;
        color: #ffffff !important;
        border: none !important;
        width: 180px !important;
        height: 180px !important;
        border-radius: 20px !important;
        font-size: 14px !important;
        font-weight: bold !important;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s !important;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2) !important;
        white-space: normal !important;
    }

        .btn-menu-square:hover {
            background-color: #004080 !important;
            cursor: pointer !important;
            transform: scale(1.05) !important;
        }

    .icon-btn {
        font-size: 50px !important;
        margin-bottom: 10px;
        color: #ffffff !important;
    }
</style>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initTooltips");
        }
    }

    void IrAGestionProgramas()
    {
        NavigationManager.NavigateTo("/gestionprogramas");
    }

    void IrAFinanciamiento()
    {
        NavigationManager.NavigateTo("/financiamiento");
    }

    void IrANuevoPrograma()
    {
        NavigationManager.NavigateTo("/nuevoprograma");
    }

    void IrACatalogoMateriales()
    {
        NavigationManager.NavigateTo("/catalogomateriales");
    }
}
