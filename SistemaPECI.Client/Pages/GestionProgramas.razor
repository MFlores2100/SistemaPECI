@page "/gestionprogramas"



<h2 class="titulo-gestion">Gestión de Programas</h2>


<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<div class="filtros-bar">
    <input type="text" placeholder="Código de Programa" class="filtro-input" />
    <input type="text" placeholder="Nombre de Programa" class="filtro-input" />
    <button class="btn-buscar">
        <i class="bi bi-search"></i>
    </button>
</div>

<table class="table table-striped tabla-programas">
    <thead>
        <tr>
            <th>Código PINE</th>
            <th>Nombre</th>
            <th>Responsable</th>
            <th>Descripción</th>
            <th>Región</th>
            <th>Año</th>
            <th>Unidad</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
       
        <tr>
            <td colspan="8" class="text-center">Datos cargando o no disponibles...</td>
        </tr>
    </tbody>
</table>

<style>
    .titulo-gestion {
        background-color: #005595;
        color: white;
        padding: 20px;
        text-align: center;
        font-size: 32px;
        font-weight: bold;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .filtros-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        background-color: #003f73;
        padding: 15px;
        border-bottom: 2px solid #004c90;
    }

    .filtro-input {
        padding: 10px;
        border-radius: 20px;
        border: none;
        width: 200px;
        font-weight: bold;
        text-align: center;
    }

    .btn-buscar {
        background-color: #002e55;
        border: none;
        padding: 10px 15px;
        border-radius: 50%;
        color: white;
        font-size: 18px;
        cursor: pointer;
    }

        .btn-buscar:hover {
            background-color: #004080;
        }

    .tabla-programas th {
        background-color: #e2e3e5;
        text-align: center;
    }

    .tabla-programas td {
        text-align: center;
        vertical-align: middle;
    }
</style>
